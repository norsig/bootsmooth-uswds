{% extends "base.twig" %}

{% block content %}
<section class="usa-grid usa-section">
{% for post in posts %}
<article class="one-half tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
    {% if post.get_thumbnail %}
      <img src="{{post.thumbnail.src}}"  alt="{{post.title}}">
    {% endif %}    
      <div class="tease-body">
        <h3><a href="{{post.link}}">{{post.title}}</a></h3>
        <p>{{post.get_preview}}</p>
      </div>
    </div>
</article>
{% endfor %}
{% include 'pagination.twig' %}
</section>
{% endblock %}